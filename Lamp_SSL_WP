# updating os..
sudo apt update -y


sudo apt upgrade -y


# install webserver
sudo apt install apache2 -y


# install server side script
sudo apt install php7.2 -y


# install some good tools
sudo apt install git unzip curl -y


# install php modules
sudo apt install php7.2-cgi php7.2-cli php7.2-curl php7.2-dev php7.2-gd php7.2-intl php7.2-mbstring php7.2-xml php7.2-zip php7.2-mysql -y


# install mysql dbms
sudo apt install mysql-server mysql-client -y


# composer
echo 'composer installation...'
cd ~
curl -sS https://getcomposer.org/installer -o composer-setup.php
sudo php composer-setup.php --install-dir=/usr/local/bin --filename=composer


mysql_secure_installation

Yes > Yes > No > Yes > yes


apt install wget -y

wget https://wordpress.org/latest.zip

unzip latest.zip

cd wordpress

cp -r * /var/www/html

cd /var/www/html 

rm -rf index.html

systemctl restart apache2

chown -R www-data:www-data  /var/www

ifconfig

mysql -u root -p

<inside>

create database wordpress;


show databases;


create user 'wordpress'@'%' identified by 'password';

grant all privileges on wordpress.* TO 'wordpress'@'%';


<exit>


#INSTALL SSL

apt install certbot -y

add-apt-repository ppa:certbot/certbot 

apt-get install python-certbot-apache


#ENABLE LICENSE

certbot --apache -d <domain>

systemctl reload apache2


  
